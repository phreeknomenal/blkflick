<% @scenes.each do |s| %>
  <div class="w-full mb-10 pr-24">
    <div class=" mb-4">
      <h3 class="text-lg text-indigo-500 font-bold"><%= s.title %></h3>
      <p class="text-zinc-500"><%= s.description %></p>
    </div>
    <div class="rounded-lg overflow-hidden">
      <iframe width="100%" height="450px" src="<%= s.video %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
  </div>
<% end %>