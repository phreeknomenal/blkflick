<section class="bg-center bg-no-repeat bg-cover bg-[url('<%= hero.banner_image %>')] bg-gray-200 bg-blend-multiply overflow-hidden" style="border-radius: 30px;">
  <div class="inline-block bg-zinc-400/40 py-2 px-4 text-sm rounded-3xl m-8 mb-48">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-1 text-orange-500 inline-block">
      <path fill-rule="evenodd" d="M12.963 2.286a.75.75 0 0 0-1.071-.136 9.742 9.742 0 0 0-3.539 6.176 7.547 7.547 0 0 1-1.705-1.715.75.75 0 0 0-1.152-.082A9 9 0 1 0 15.68 4.534a7.46 7.46 0 0 1-2.717-2.248ZM15.75 14.25a3.75 3.75 0 1 1-7.313-1.172c.628.465 1.35.81 2.133 1a5.99 5.99 0 0 1 1.925-3.546 3.75 3.75 0 0 1 3.255 3.718Z" clip-rule="evenodd" />
    </svg>
    What's HOT!
  </div>
  <div class="justify-bottom w-full p-8" style="background: linear-gradient(0deg, rgba(0,0,0,0.75) 65%, rgba(0,0,0,0) 100%);">
    <%= movie_genre_badge(hero.genres) %>
    <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl"><%= hero.title %></h1>
    <p class="mb-8 w-3/4 text-lg font-normal text-white lg:text-xl"><%= hero.excerpt %></p>
    <div class="flex flex-col space-y-4 sm:flex-row sm:justify-left sm:space-y-0">
      <%= link_to "#", class: "inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-3xl bg-violet-500 hover:bg-violet-700 focus:ring-4 focus:ring-violet-300 dark:focus:ring-violet-900" do %>
        Learn More
        <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      <% end %>
      <%= link_to movies_path, class: "inline-flex justify-center hover:text-gray-900 items-center py-3 px-5 sm:ms-4 text-base font-medium text-center text-white rounded-3xl border border-white hover:bg-gray-100 focus:ring-4 focus:ring-gray-400" do %>
        See All Movies
      <% end %>  
    </div>
  </div>
</section>

